@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row align-items-center pt-4 mb-2">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;
                Create New Company
            </a>
        </div>
    </div>
    <div class="row">
        <table id="tblData" class="table table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Phone Number</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{
<script src="~/js/company.js"></script>
}