@model ShoppingCart
@{
    ViewData["Title"] = "Product Details";
}

<form method="post">
    <div class="card border-0 container pt-4">
        <div class="card-header bg-primary text-light row">
            <div class="col-md-8">
                <h1 class="text-white-50">@Model.Product.Title</h1>
                <p class="text-warning">by @Model.Product.Author</p>
            </div>
            <div class="col-md-4 text-md-end pt-md-4 pb-2">
                <span class="badge bg-info pt-2" style="height:30px;">@Model.Product.CoverType.Name</span>
                <span class="badge bg-warning pt-2" style="height:30px;">@Model.Product.Category.Name</span>
            </div>
        </div>
        <div class="card-body mt-3 p-0 row">
            <div class="col-md-4 p-0 text-center">
                <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
            </div>
            <div class="col-md-8 ps-md-4 mt-3">
                <div class="row">
                    <h5 class="text-muted p-0">ISBN : @Model.Product.ISBN</h5>
                </div>
                <div class="row">
                    <h5 class="text-muted p-0">List Price: <strike>@Model.Product.ListPrice.ToString("c")</strike></h5>
                </div>
                <div class="row text-center">
                    <div class="p-1 col-3 col-lg-2 bg-secondary border-bottom">
                        <div>Quantity</div>
                    </div>
                    <div class="p-1 col-3 col-lg-2 bg-secondary border-bottom">
                        <div>1-50</div>
                    </div>
                    <div class="p-1 col-3 col-lg-2 bg-secondary border-bottom">
                        <div>51-100</div>
                    </div>
                    <div class="p-1 col-3 col-lg-2 bg-secondary border-bottom">
                        <div>100+</div>
                    </div>
                </div>
                <div class="row text-center" style="color:maroon; font-weight:bold">
                    <div class="p-1 col-3 col-lg-2 bg-secondary">
                        <div>Price</div>
                    </div>
                    <div class="p-1 col-3 col-lg-2 bg-secondary">
                        <div>@Model.Product.Price.ToString("c")</div>
                    </div>
                    <div class="p-1 col-3 col-lg-2 bg-secondary">
                        <div>@Model.Product.Price50.ToString("c")</div>
                    </div>
                    <div class="p-1 col-3 col-lg-2 bg-secondary">
                        <div>@Model.Product.Price100.ToString("c")</div>
                    </div>
                </div>
                <div class="row">
                    <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                </div>
                <div class="row mb-3 align-items-center">
                    <div class="col-3 col-lg-2 text-primary"><h4>Count</h4></div>
                    <div class="col-9 col-lg-10"><input asp-for="Count" class="form-control" /></div>
                </div>
            </div>
            
        </div>
    </div>
    <div class="card-footer p-0 pt-3 mt-2">
        <div class="row">
            <div class="col-md-6 pb-1">
                <a class="btn btn-success form-control py-2" asp-action="Index">Back to Home</a>
            </div>
            <div class="col-md-6 pb-1">
                <button type="submit" value="Add to Cart" class="btn btn-primary form-control py-2">Add to Cart</button>
            </div>
        </div>
    </div>
</form>
