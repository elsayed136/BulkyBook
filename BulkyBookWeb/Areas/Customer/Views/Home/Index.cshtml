@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4 mt-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card" style="height: 550px;">
                <img src="@product.ImageUrl" class="card-img-top p-1 rounded" style="max-height:300px;" />

                <div class="card-body">
                    <div class="pl-1">
                        <p class="card-title h5 text-primary">@product.Title</p>
                        <p class="card-title text-info">by <b>@product.Author</b></p>
                    </div>
                    <div class="pl-1">
                        <p>List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                    </div>
                    <div class="pl-1">
                        <p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
                    </div>
                </div>
                <div class="position-absolute bottom-0 p-2" style="width:100%">
                    <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">
                        Details
                    </a>
                </div>
            </div>

        </div>
    }
</div>
